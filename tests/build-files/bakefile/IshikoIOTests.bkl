ishikopath = envvar("ISHIKO_CPP_ROOT");
import $(ishikopath)/io/include/Ishiko/IO.bkl;
import $(ishikopath)/test-framework/include/Ishiko/TestFramework/Core.bkl;

toolsets = gnu vs2022 vs2019 vs2017 vs2015;

gnu.makefile = ../gnumake/GNUmakefile;
vs2022.solutionfile = ../vc17/IshikoIOTests.sln;
vs2019.solutionfile = ../vc16/IshikoIOTests.sln;
vs2017.solutionfile = ../vc15/IshikoIOTests.sln;
vs2015.solutionfile = ../vc14/IshikoIOTests.sln;

program IshikoIOTests : IshikoIO, IshikoTestFrameworkCore
{
    archs = x86 x86_64;

    if ($(toolset) == gnu)
    {
        cxx-compiler-options = "-std=c++11";
        libs += IshikoTestFrameworkCore IshikoConfiguration IshikoXML IshikoFileSystem IshikoIO IshikoProcess IshikoTime IshikoText IshikoErrors IshikoBasePlatform;
        libs += fmt boost_filesystem;
    }

    headers
    {
        ../../src/IOErrorExtensionTests.hpp
        ../../src/StreamUtilitiesTests.hpp
    }

    sources
    {
        ../../src/IOErrorExtensionTests.cpp
        ../../src/main.cpp
        ../../src/StreamUtilitiesTests.cpp
    }
}
